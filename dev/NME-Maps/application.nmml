<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- metadata, make sure 'package' is at least 2 segments (ie. com.myproject) -->
	<app file="NMEMaps" title="NME-Maps" main="jonas.maps.test.Main" 
		version="1.0.0" company="Jonas Malaco Filho" />
		
	<!-- output -->
	<window width="1280" height="720" fps="60" orientation="portrait" resizable="false" />
	<set name="BUILD_DIR" value="bin" />
	
	<!-- classpath, haxe libs -->
	<classpath name="src" />
	<classpath name="../../../jonas-haxe/src" />
	<haxelib name="nme" />
	<haxelib name="haxei" />
	
	<!-- assets -->
	<icon name="assets/nme.svg" />
	<assets path="assets" include="*" exclude="nme.svg" />
	
	<!-- DLLs -->
	<ndll name="std" />
	<ndll name="regexp" />
	<ndll name="zlib" />
	<ndll name="nme" haxelib="nme" />
	
	<!-- haxei configuration -->
	<compilerflag name="--macro haxei.Compiler.register( 'jonas', true, [ 'jonas.unit', 'jonas.maps' ] )" />
	<compilerflag name="--macro haxei.Compiler.register( 'nme', false )" />
	
	<haxedef name="RJTREE_DEBUG" />
	<haxedef name="JMAPS_TRACE_RTREE" />
	
	<!-- Windows app: hide console -->
	<!--<setenv name="no_console" value="1" />-->
</project>